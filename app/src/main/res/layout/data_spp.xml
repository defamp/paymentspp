<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblue">

    <TextView
        android:id="@+id/text_spp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/smkn4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMKN 4 BANDUNG"
                android:textStyle="bold"
                android:textSize="60px"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl.Kliningan No.6, Turangga Kec."
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lengkong, Kota Bandung, Jawa"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Barat 40264"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_______________________________________________________________"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id SPP"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/etx_id_spp"
            android:editable="false"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#87CEEB"
            android:layout_marginLeft="69dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun Ajaran"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/etx_tahun_ajaran"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#87CEEB"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/etx_nominal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="#87CEEB"
            android:layout_marginLeft="52dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnTambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah"
            android:textColor="@color/black"
            android:backgroundTint="#87CEEB"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_baseline_add_circle_outline_24"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah"
            android:textColor="@color/black"
            android:backgroundTint="#87CEEB"
            android:layout_marginRight="16dp"
            android:drawableLeft="@drawable/ic_baseline_edit_24"/>
        <Button
            android:onClick="ButtonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus"
            android:textColor="@color/black"
            android:backgroundTint="#87CEEB"
            android:drawableLeft="@drawable/ic_baseline_delete_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="#87CEEB"
        android:layout_marginHorizontal="22dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id SPP                     :"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_id_spp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:background="#87CEEB"
        android:layout_marginHorizontal="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tahun Ajaran         :"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_tahun_ajaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:background="#87CEEB"
        android:layout_marginHorizontal="22dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nominal                  :"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_nominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"/>
    </LinearLayout>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/spp_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"/>
</LinearLayout>