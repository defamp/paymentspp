<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600px"
    android:layout_height="600px"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="31px"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_baseline_system_update_alt_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda yakin?"
        android:textStyle="bold"
        android:textSize="60px"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mengubah data ini"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:onClick="LakukanUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#87CEEB"
            android:textColor="@color/black"
            android:paddingHorizontal="100px"
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:text="Ya"/>

        <Button
            android:onClick="TidakLakukan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#87CEEB"
            android:textColor="@color/black"
            android:paddingHorizontal="100px"
            android:textSize="30px"
            android:layout_marginTop="10px"
            android:layout_marginLeft="5dp"
            android:text="Tidak"/>

    </LinearLayout>

</LinearLayout>