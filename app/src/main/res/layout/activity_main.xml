<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightblue"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:layout_marginTop="210px"
        android:text="SMKN 4 BANDUNG"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="21px"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="Sistem Pembayaran SPP"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/smkn4" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#87CEEB"
        android:textColor="@color/black"
        android:paddingHorizontal="80px"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="Log In"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.01"
        android:textColor="@color/black"
        android:layout_marginTop="470px"
        android:textSize="20dp"
        android:textAlignment="center"/>


</LinearLayout>